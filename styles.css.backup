/* Reset y configuración base */
:root {
    --primary: #0a192f;
    --secondary: #112240;
    --accent: #64ffda;
    --text-light: #ccd6f6;
    --text-dim: #8892b0;
    --white: #e6f1ff;
    --gradient-overlay: linear-gradient(to bottom, rgba(10, 25, 47, 0.85), rgba(10, 25, 47, 0.95));
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
    color: var(--text-dim);
    background-color: var(--primary);
    overflow-x: hidden;
}

html {
    scroll-behavior: smooth;
}

/* Navegación */
.navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(10, 25, 47, 0.85);
    backdrop-filter: blur(10px);
    box-shadow: 0 10px 30px -10px rgba(2, 12, 27, 0.7);
    z-index: 1000;
    transition: all 0.3s ease;
    padding: 1rem 0;
}

.nav-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    font-size: 1.5rem;
    font-weight: 800;
    color: var(--white);
    letter-spacing: 1px;
}

.logo span {
    color: var(--accent);
}

.nav-links {
    display: flex;
    list-style: none;
    gap: 2.5rem;
}

.nav-links a {
    text-decoration: none;
    color: var(--text-light);
    font-weight: 500;
    font-size: 0.9rem;
    transition: color 0.3s;
    position: relative;
}

.nav-links a:hover,
.nav-links a.active {
    color: var(--accent);
}

.nav-links a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent);
    transition: width 0.3s ease;
}

.nav-links a:hover::after,
.nav-links a.active::after {
    width: 100%;
}

/* Hero Section */
.hero {
    height: 100vh;
    min-height: 600px;
    background: var(--gradient-overlay), url('hero-bg.png');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 0 2rem;
    position: relative;
}

.hero-content {
    max-width: 1000px;
    z-index: 1;
    animation: fadeInUp 1s ease-out;
}

.badge {
    display: inline-block;
    background: rgba(100, 255, 218, 0.1);
    color: var(--accent);
    padding: 0.5rem 1.5rem;
    border-radius: 50px;
    margin-bottom: 1.5rem;
    font-size: 0.85rem;
    font-weight: 600;
    border: 1px solid rgba(100, 255, 218, 0.2);
    letter-spacing: 1px;
}

.hero h1 {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    font-weight: 800;
    line-height: 1.1;
    color: var(--white);
}

.hero p {
    font-size: 1.2rem;
    margin-bottom: 2.5rem;
    color: var(--text-dim);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.btn {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: transparent;
    color: var(--accent);
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    border: 1px solid var(--accent);
    transition: all 0.3s;
    position: relative;
    overflow: hidden;
}

.btn:hover {
    background: rgba(100, 255, 218, 0.1);
    transform: translateY(-3px);
}

/* Container general */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 6rem 2rem;
}

section {
    background-color: var(--primary);
}

h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--white);
    font-weight: 700;
    position: relative;
    display: inline-block;
}

h2::after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background: var(--accent);
    margin-top: 10px;
    border-radius: 2px;
}

.section-subtitle {
    font-size: 1.1rem;
    color: var(--text-dim);
    margin-bottom: 4rem;
    max-width: 600px;
}

/* Stats Section */
.stats-section {
    background-color: var(--secondary);
    margin-top: -100px;
    position: relative;
    z-index: 10;
    padding: 4rem 0;
    box-shadow: 0 -20px 50px rgba(0, 0, 0, 0.3);
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 2rem;
}

.stat-card {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    text-align: center;
    transition: transform 0.3s;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.stat-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.08);
}

.stat-card i {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--accent);
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--white);
}

.stat-label {
    font-size: 0.9rem;
    color: var(--text-dim);
}

/* Problema Section */
.problema-section {
    background-color: var(--primary);
}

.problema-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.problema-content h3 {
    color: var(--white);
    font-size: 1.5rem;
    margin: 2rem 0 1rem 0;
}

.problema-content p {
    margin-bottom: 1.5rem;
}

.problema-image {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    position: relative;
}

.problema-image::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(100, 255, 218, 0.2);
    mix-blend-mode: multiply;
    transition: opacity 0.3s;
}

.problema-image:hover::after {
    opacity: 0;
}

.problema-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    filter: grayscale(100%) contrast(1.2);
    transition: filter 0.3s;
}

.problema-image:hover img {
    filter: none;
}

.highlight-box {
    background: var(--secondary);
    padding: 2rem;
    border-radius: 8px;
    margin-top: 2rem;
    border-left: 3px solid var(--accent);
}

.highlight-box h4 {
    color: var(--white);
    margin-bottom: 1rem;
}

.highlight-box ul {
    list-style: none;
}

.highlight-box ul li {
    padding: 0.5rem 0;
    color: var(--text-dim);
    display: flex;
    align-items: center;
}

.highlight-box ul li i {
    color: var(--accent);
    margin-right: 1rem;
    font-size: 0.8rem;
}

/* Empresa Section */
.empresa-section {
    background-color: var(--secondary);
}

.empresa-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.empresa-image {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    position: relative;
}

.empresa-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    filter: grayscale(100%);
    transition: filter 0.3s;
}

.empresa-image:hover img {
    filter: none;
}

.empresa-content h3 {
    color: var(--white);
    font-size: 1.5rem;
    margin: 2rem 0 1rem 0;
}

.empresa-location {
    color: var(--accent);
    font-size: 1rem;
    margin-bottom: 1.5rem;
}

.empresa-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-top: 2rem;
}

.empresa-stat {
    background: rgba(255, 255, 255, 0.05);
    padding: 1.5rem;
    border-radius: 8px;
    text-align: center;
}

.empresa-stat i {
    font-size: 1.5rem;
    color: var(--accent);
    margin-bottom: 0.5rem;
}

.empresa-stat span {
    display: block;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--white);
}

/* Metodología Section */
.metodologia-section {
    background-color: var(--primary);
}

.fases-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.fase-card {
    background: var(--secondary);
    padding: 2.5rem;
    border-radius: 8px;
    position: relative;
    overflow: hidden;
    transition: transform 0.3s;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.fase-card:hover {
    transform: translateY(-10px);
}

.fase-number {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 3rem;
    font-weight: 800;
    color: rgba(255, 255, 255, 0.05);
}

.fase-card i {
    font-size: 2rem;
    color: var(--accent);
    margin-bottom: 1.5rem;
}

.fase-card h3 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--white);
}

/* Timeline Section */
.timeline-section {
    background-color: var(--secondary);
}

.timeline {
    max-width: 800px;
    margin: 3rem auto;
    position: relative;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 29px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: rgba(255, 255, 255, 0.1);
}

.timeline-item {
    display: flex;
    margin-bottom: 3rem;
    position: relative;
}

.timeline-icon {
    width: 60px;
    height: 60px;
    background: var(--primary);
    border: 2px solid var(--accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
    font-size: 1.2rem;
    flex-shrink: 0;
    z-index: 1;
}

.timeline-content {
    background: rgba(255, 255, 255, 0.02);
    padding: 2rem;
    border-radius: 8px;
    margin-left: 2rem;
    flex-grow: 1;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.timeline-content h3 {
    color: var(--white);
    font-size: 1.3rem;
    margin-bottom: 0.5rem;
}

.timeline-date {
    color: var(--accent);
    font-family: monospace;
    margin-bottom: 1rem;
    font-size: 0.9rem;
}

/* Análisis Section */
.analisis-section {
    background-color: var(--primary);
}

.problema-matematico {
    background: var(--secondary);
    padding: 2.5rem;
    border-radius: 8px;
    margin-bottom: 2rem;
    border-left: 3px solid var(--accent);
}

.problema-matematico h3 {
    color: var(--white);
    margin-bottom: 1rem;
    font-size: 1.5rem;
}

.problema-matematico h3 i {
    color: var(--accent);
    margin-right: 0.5rem;
}

.calculo-box h4 {
    color: var(--text-light);
    margin-bottom: 1rem;
    font-size: 1.1rem;
}

.formula {
    background: rgba(0, 0, 0, 0.3);
    padding: 1.5rem;
    border-radius: 4px;
    margin: 1rem 0;
    font-family: 'Fira Code', monospace;
    color: var(--accent);
    border: 1px solid rgba(100, 255, 218, 0.1);
}

.resultado {
    background: rgba(100, 255, 218, 0.1);
    padding: 1.5rem;
    border-radius: 4px;
    margin: 1rem 0;
    color: var(--white);
}

.resultado strong {
    color: var(--accent);
}

/* Código Section */
.codigo-section {
    background: #020c1b;
}

.codigo-container {
    background: #112240;
    border-radius: 8px;
    padding: 2rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
}

.codigo-header {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    align-items: center;
}

.codigo-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
}

.dot-red {
    background: #ff5f56;
}

.dot-yellow {
    background: #ffbd2e;
}

.dot-green {
    background: #27c93f;
}

pre {
    color: #a9b7c6;
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
}

.keyword {
    color: #cc7832;
}

.string {
    color: #6a8759;
}

.number {
    color: #6897bb;
}

.comment {
    color: #808080;
}

.function {
    color: #ffc66d;
}

/* Video Section */
.video-section {
    background-color: var(--secondary);
    text-align: center;
}

.video-container {
    max-width: 900px;
    margin: 3rem auto;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.05);
}

/* Conclusiones Section */
.conclusiones-section {
    background-color: var(--primary);
}

.conclusion-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.conclusion-card {
    background: var(--secondary);
    padding: 2rem;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: transform 0.3s;
}

.conclusion-card:hover {
    transform: translateY(-5px);
    border-color: var(--accent);
}

.conclusion-card i {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--accent);
}

.conclusion-card h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: var(--white);
}

/* Team Section */
.team-section {
    background-color: var(--secondary);
    text-align: center;
}

.team-section .section-subtitle {
    margin-left: auto;
    margin-right: auto;
}

.team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
}

.team-member {
    background: var(--primary);
    padding: 2rem;
    border-radius: 8px;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: transform 0.3s;
}

.team-member:hover {
    transform: translateY(-5px);
    border-color: var(--accent);
}

.team-member i {
    font-size: 2.5rem;
    color: var(--accent);
    margin-bottom: 1rem;
}

.team-member h4 {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--white);
}

.profesor-info {
    margin-top: 4rem;
    padding: 2rem;
    background: var(--primary);
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    display: inline-block;
}

.profesor-info p {
    color: var(--text-light);
}

.profesor-info strong {
    color: var(--accent);
}

/* Footer */
footer {
    background: #020c1b;
    color: var(--text-dim);
    padding: 4rem 2rem 2rem;
}

.footer-content {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
}

.footer-col h3 {
    color: var(--white);
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
}

.footer-col a {
    color: var(--text-dim);
    text-decoration: none;
    transition: color 0.3s;
}

.footer-col a:hover {
    color: var(--accent);
}

.footer-col i {
    color: var(--accent);
    margin-right: 0.5rem;
}

.copyright {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    font-size: 0.9rem;
}

/* Animaciones */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes moveContainer {
    0% {
        transform: translateX(-100%);
    }

    100% {
        transform: translateX(100vw);
    }
}

.moving-container {
    position: absolute;
    bottom: 20px;
    left: 0;
    font-size: 3rem;
    color: rgba(100, 255, 218, 0.3);
    animation: moveContainer 15s linear infinite;
    z-index: 0;
    pointer-events: none;
}

.function {
    color: #ffc66d;
}

