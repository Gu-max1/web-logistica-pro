/* Metodología Section */
.metodologia-section {
    background: linear-gradient(rgba(10, 25, 47, 0.95), rgba(10, 25, 47, 0.95)), url('methodology-bg.png');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
}

/* Análisis Section */
.analisis-section {
    background-color: var(--primary);
}

.analisis-grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 3rem;
    align-items: start;
}

.analisis-image {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.05);
    position: sticky;
    top: 100px;
}

.analisis-image img {
    width: 100%;
    display: block;
    transition: transform 0.3s;
}

.analisis-image:hover img {
    transform: scale(1.05);
}

/* Galería Section */
.gallery-section {
    background-color: var(--secondary);
    padding: 4rem 0;
}

.gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 3rem;
}

.gallery-item {
    border-radius: 8px;
    overflow: hidden;
    position: relative;
